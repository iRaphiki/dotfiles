{
  // Native Functions
  "security.workspace.trust.untrustedFiles": "open",
  "workbench.startupEditor": "none",
  "editor.codeActionsOnSave": {
    "source.addMissingImports": "explicit",
    "source.organizeImports": "explicit"
  },
  "emmet.excludeLanguages": ["markdown", "php"],
  "emmet.triggerExpansionOnTab": true, // enable tab to expanse emmet tags
  // Extension Functions
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "extensions.ignoreRecommendations": true,
  "markdown-preview-enhanced.enableHTML5Embed": true,
  "markdown-preview-enhanced.HTML5EmbedUseLinkSyntax": true,
  "markdown-preview-enhanced.HTML5EmbedIsAllowedHttp": true,
  "projectManager.git.baseFolders": [
    "$HOME/Developer/workspace",
    "$HOME/Developer/sites"
  ],
  "projectManager.sortList": "Recent",
  "workbench.settings.editor": "json",
  "cSpell.ignorePaths": [
    "package-lock.json",
    "node_modules",
    "vscode-extension",
    ".git/objects",
    ".vscode",
    ".vscode-insiders"
  ],
  "vim.leader": "<space>",
  "vim.foldfix": true,
  "vim.hlsearch": true,
  "vim.useSystemClipboard": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.color": "rgba(100, 100, 100, 0.3)",
  "vim.highlightedyank.textColor": "white",
  "vim.normalModeKeyBindings": [
    {
      "before": ["leader", "w"],
      "commands": [":w!"]
    },
    {
      "before": ["leader", "q"],
      "commands": [":q!"]
    },
    {
      "before": ["leader", "x"],
      "commands": [":x!"]
    },
    {
      "before": ["<c-a>"],
      "after": ["g", "g", "V", "G"]
    },
    {
      "before": ["leader", "k"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["leader", "c", "a"],
      "commands": ["editor.action.quickFix"]
    }
  ],
  // "css.lint.unknownAtRules": "ignore",
  // Theme and personalization
  "workbench.sideBar.location": "right",
  "editor.fontSize": 16,
  "editor.smoothScrolling": true,
  "editor.lineNumbers": "relative",
  "search.showLineNumbers": true,
  "zenMode.hideLineNumbers": false,
  "zenMode.centerLayout": true,
  "editor.linkedEditing": true,
  "editor.suggest.insertMode": "replace",
  "zenMode.hideStatusBar": false,
  "editor.stickyScroll.enabled": true,
  "editor.glyphMargin": false,
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "on",
    "strings": "on"
  },
  "editor.minimap.enabled": false,
  "indentRainbow.colors": [
    "rgba(252,252,252,0.07)",
    "rgba(189,189,189,0.07)",
    "rgba(126,126,126,0.07)",
    "rgba(63,63,63,0.07)"
  ],
  "editor.fontLigatures": true,
  "editor.fontFamily": "'CaskaydiaCove Nerd Font', 'Fira Code', Menlo, Monaco, 'Courier New', monospace",
  // Formatters
  "editor.guides.bracketPairs": true,
  "editor.guides.bracketPairsHorizontal": true,
  "blade.format.enable": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
    "editor.autoClosingBrackets": "always"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "keep",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    }
  },
  "html.format.templating": true,
  // Telemetry
  "telemetry.telemetryLevel": "off",
  "intelephense.telemetry.enabled": false,
  "workbench.colorTheme": "Bearded Theme Vivid Black",
  "editor.lineHeight": 2.3,
  "editor.accessibilitySupport": "off",
  "intelephense.rename.namespaceMode": "all",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "markdown.updateLinksOnFileMove.enabled": "always",
  "workbench.iconTheme": "material-icon-theme",
  "editor.matchBrackets": "never",
  "terminal.integrated.env.osx": {},
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.cwd": ".",
  "terminal.external.osxExec": "iterm2",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.smoothScrolling": true,
  "explorer.confirmDelete": false,
  "files.trimTrailingWhitespace": true,
  "editor.padding.bottom": 6,
  "editor.padding.top": 8,
  "editor.inlayHints.padding": true,
  "intelephense.completion.fullyQualifyGlobalConstantsAndFunctions": true,
  "window.commandCenter": false,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "npm.packageManager": "pnpm",
  "editor.formatOnSave": true,
  "workbench.editor.showTabs": "none",
  "workbench.activityBar.location": "top",
  "window.zoomLevel": -1,
  "window.openFoldersInNewWindow": "on",
  "window.openFilesInNewWindow": "on",
  "cSpell.language": "en,es-ES",
  "[properties]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  }
}
